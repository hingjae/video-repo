extends base.pug
block contents 
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(name="title" type="text" required placeholder="title" value=posting.title)
        input(name="contents" type="text" required placeholder="contents" value=posting.contents)
        input(name="hashtags" type="text" required placeholder="hashtags" value=posting.hashtags.join())
        input(type="submit" value="Save")